<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/app_color"
        android:textSize="25sp"
        android:gravity="center"
        android:fontFamily="monospace"
        android:text="Register in Yatra"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/registerimageSelect_id"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/icon_profile" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

            <TextView
                android:id="@+id/register_selectProfile_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Select Profile"
                android:textColor="@color/app_color"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"/>




            <EditText
                android:id="@+id/register_firstname_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/icon_profile"
                android:ems="10"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:hint="First Name"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_selector"
                android:inputType="textEmailAddress"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/register_lastname_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/icon_profile"
                android:ems="10"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:hint="Last Name"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_selector"
                android:inputType="textEmailAddress"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/register_email_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/icon_email"
                android:ems="10"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_selector"
                android:inputType="textEmailAddress"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/register_password_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/icon_pwd"
                android:ems="10"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:background="@drawable/edittext_selector"
                android:inputType="textEmailAddress"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/register_phone_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/icon_phone"
                android:ems="10"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:hint="Phone"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_selector"
                android:inputType="number"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/register_address_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/icon_location"
                android:ems="10"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:hint="Address"
                android:background="@drawable/edittext_selector"
                android:inputType="text"
                android:textSize="15sp" />



            <RadioGroup
                android:id="@+id/radioGroup_Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/rb_student_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:checked="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="Student"
                    android:textColor="@color/app_color"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rb_volunteer_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="Volunteer"
                    android:textColor="@color/app_color"
                    android:textSize="15sp" />


            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/register_registerBtn_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_selector"
                    android:text="Register"
                    android:textColor="#fff"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/register_cancelBtn_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_selector"
                    android:text="Cancel"
                    android:textColor="#fff"
                    android:textSize="25sp" />


            </LinearLayout>



            <ProgressBar
                android:id="@+id/progressBar_id"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>