<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/icon_profile" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/profile_changeImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Change Profile"
                android:textColor="@color/app_color"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"/>




            <EditText
                android:id="@+id/profile_firstname_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/icon_profile"
                android:ems="10"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:hint="First Name"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_selector"
                android:inputType="textEmailAddress"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/profile_lastname_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/icon_profile"
                android:ems="10"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:hint="Last Name"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_selector"
                android:inputType="textEmailAddress"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/profile_email_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/icon_email"
                android:ems="10"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_selector"
                android:inputType="textEmailAddress"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/profile_phone_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/icon_phone"
                android:ems="10"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:hint="Phone"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_selector"
                android:inputType="number"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/profile_address_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableStart="@drawable/icon_location"
                android:ems="10"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:hint="Address"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_selector"
                android:inputType="text"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/updateBtn_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_selector"
                    android:text="Update"
                    android:textColor="#fff"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/cancelBtn_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_selector"
                    android:text="Cancel"
                    android:textColor="#fff"
                    android:textSize="25sp" />


            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar_id"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>